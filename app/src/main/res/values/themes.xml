<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
      Base application theme. The parent Theme.MaterialComponents is the correct choice
      for the dependency version 1.13.0, which resolves the layout inflation error.
    -->
    <style name="Theme.Linktine" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

        <!-- Typography and Shape attributes for consistency in Material 1.x -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MaterialComponents.Body2</item>

        <!-- Explicitly set MaterialCardView style for Material 1.x compatibility -->
        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>

    </style>
</resources>
